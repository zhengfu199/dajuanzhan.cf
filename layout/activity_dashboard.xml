<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="板块"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:onClick="back_to_homepage" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/mainbackground">
            <TextView
                android:fontFamily="sans-serif-black"
                android:layout_width="wrap_content"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background"
                android:gravity="center"
                android:text="每日文章"
                android:textColor="@color/white"
                android:textSize="40sp" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猪脚专栏"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——来整个活！"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="了解"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <Button
                    android:onClick="pigsleg2"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_navigate_next_24"/>
            </LinearLayout>
            <WebView
                android:id="@+id/pigsleg"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日一题"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——做题有益健康"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="了解"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <Button
                    android:onClick="math2"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_navigate_next_24"/>
            </LinearLayout>

            <WebView
                android:id="@+id/math"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技术杂谈"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——没啥技术"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="了解"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <Button
                    android:onClick="develop2"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_navigate_next_24"/>
            </LinearLayout>
            <WebView
                android:id="@+id/develop"
                android:layout_width="match_parent"
                android:layout_height="220dp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英语练习"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——贼难贼难"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="了解"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <Button
                    android:onClick="English"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_navigate_next_24"/>
            </LinearLayout>

            <WebView
                android:id="@+id/English"
                android:layout_width="match_parent"
                android:layout_height="220dp" />
            <Button
                android:onClick="more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="点我了解更多"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:textSize="20sp"
                android:background="@color/no"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>