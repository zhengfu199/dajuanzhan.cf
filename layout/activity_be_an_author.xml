<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".be_an_author">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="如何成为作者？"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/baseline_contact_support_24"/>
        <Button
            android:onClick="back_to_author"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/baseline_arrow_back_ios_24"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可以通过以下渠道联系管理员："
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/zun"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ:2416677650"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信:qq2416677650"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

</LinearLayout>