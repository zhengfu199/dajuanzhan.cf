<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".author">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="大卷作者"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:onClick="back_to_dashboard" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:drawableRight="@drawable/baseline_contact_support_24"
            android:background="@color/no"
            android:text="成为作者？"
            android:onClick="be_an_author" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="了解他们:"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@drawable/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/zun"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zun"
                    android:layout_marginLeft="10dp"
                    android:textSize="35sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——大卷站创建者"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical" />
                <Button
                    android:onClick="zun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解TA"
                    android:textSize="15sp"
                    android:background="@color/no"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TA的板块：每日数学"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <Button
                    android:onClick="about_zun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:background="@color/no"
                    android:text="了解"
                    android:textSize="20sp" />
            </LinearLayout>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/zun"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/zhengfu"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="征服"
                    android:layout_marginLeft="10dp"
                    android:textSize="35sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——一整活的"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical" />
                <Button
                    android:onClick="zhengfu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解TA"
                    android:textSize="15sp"
                    android:background="@color/no"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TA的板块:技术杂谈"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <Button
                    android:onClick="about_zhengfu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:background="@color/no"
                    android:text="了解"
                    android:textSize="20sp" />
            </LinearLayout>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/zhengfu"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pigsleg"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猪脚"
                    android:layout_marginLeft="10dp"
                    android:textSize="35sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="——6的猪脚"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical" />
                <Button
                    android:onClick="pigsleg_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解TA"
                    android:textSize="15sp"
                    android:background="@color/no"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TA的板块:猪脚新闻"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <Button
                    android:onClick="about_pigsleg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:background="@color/no"
                    android:text="了解"
                    android:textSize="20sp" />
            </LinearLayout>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/pigsleg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>