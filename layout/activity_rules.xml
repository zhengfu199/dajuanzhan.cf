<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rules">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="声明"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:onClick="back_to_account" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告:"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textSize="50sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_error_24"
                android:text="本站部分资源来源网络，如有侵权，联系2416677650@qq.com删除。"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_error_24"
                android:text="本站所有资料仅供学习交流。"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_error_24"
                android:text="本站为非盈利性网站。"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_error_24"
                android:text="现已分配一些帐号给其他作者。非管理员账号发表的内容为其他作者的个人观点，不代表本网站观点，本网站不对其他作者发表的内容负责。"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="警告：不要发表不良内容"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/red"
                android:textSize="35sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_edit_note_24"
                android:text="关于投稿："
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎投稿，请投至邮箱：2416677650@qq.com，注明署名和来源，查收后酌情上传分享。"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="——edit by zun"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>